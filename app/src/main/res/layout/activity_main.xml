<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74EDFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:insetLeft="10dp"
            android:insetRight="30dp"
            android:text="+"
            android:textSize="24dp"
            android:textStyle="bold"
            card_view:backgroundTint="#1E88E5"
            card_view:cornerRadius="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:fontFamily="serif"
            android:text="FITSTAGRAM"
            android:textColor="#039BE5"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="641dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ranking_button"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="10dp"
                android:insetRight="20dp"
                android:text="Rankings"
                android:textColor="@color/black"
                android:textStyle="bold"
                card_view:backgroundTint="#1A000000"
                card_view:cornerRadius="50dp" />

            <Button
                android:id="@+id/user_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="20dp"
                android:insetRight="10dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textStyle="bold"
                card_view:backgroundTint="#1A000000"
                card_view:cornerRadius="50dp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/post1"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="78dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/post2"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="222dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/post3"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="370dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/vote_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="141dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="Vote" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="196dp"
            android:layout_height="124dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="about post"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="199dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="221dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="about post"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="200dp"
            android:layout_height="126dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="146dp"
            android:text="about post"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>